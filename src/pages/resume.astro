---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Resume" description="Download Stephen Burkot's resume and view professional experience.">
  <section class="container py-12">
    <div class="max-w-4xl">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-8">
        <div>
          <h1 class="text-3xl md:text-4xl font-bold text-midnight mb-2">Resume</h1>
          <p class="text-gray-600">
            View my professional experience and skills.
          </p>
        </div>
        <a
          href="/resume.pdf"
          download="Stephen_Burkot_Resume.pdf"
          class="btn btn-primary inline-flex items-center"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
          </svg>
          Download PDF
        </a>
      </div>

      <!-- PDF Viewer -->
      <div class="bg-white rounded-xl shadow-sm overflow-hidden">
        <div class="aspect-[8.5/11] w-full">
          <iframe
            src="/resume.pdf"
            class="w-full h-full border-0"
            title="Stephen Burkot Resume"
          >
            <p class="p-4 text-gray-600">
              Your browser doesn't support embedded PDFs.
              <a href="/resume.pdf" download class="text-sea hover:text-spanish hover:underline">
                Download the PDF
              </a>
              instead.
            </p>
          </iframe>
        </div>
      </div>

      <!-- Fallback content for SEO and accessibility -->
      <div class="mt-8 prose max-w-none">
        <noscript>
          <h2>Stephen Burkot</h2>
          <p>Global Health Engineer | Researcher | Maker</p>
          <p>
            <a href="/resume.pdf" download>Download my resume (PDF)</a> for full details
            about my professional experience, education, and skills.
          </p>
        </noscript>
      </div>
    </div>
  </section>
</BaseLayout>
