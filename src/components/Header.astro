---
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/projects', label: 'Projects' },
  { href: '/publications', label: 'Publications' },
  { href: '/resume', label: 'Resume' },
  { href: '/about', label: 'About' },
];

function isActive(href: string): boolean {
  if (href === '/') {
    return currentPath === '/';
  }
  return currentPath.startsWith(href);
}
---

<header class="bg-white/80 backdrop-blur-sm sticky top-0 z-50 border-b border-gray-100">
  <nav class="container py-4">
    <div class="flex items-center justify-between">
      <a href="/" class="group">
        <span class="text-xl font-semibold text-midnight group-hover:text-spanish transition-colors">
          Stephen Burkot
        </span>
        <span class="hidden sm:inline text-sm text-gray-500 ml-2">
          Engineer | Researcher | Maker
        </span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class:list={[
              'text-sm font-medium transition-colors',
              isActive(link.href)
                ? 'text-spanish'
                : 'text-gray-600 hover:text-spanish',
            ]}
          >
            {link.label}
          </a>
        ))}
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-btn"
        class="md:hidden p-2 text-gray-600 hover:text-spanish"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"
          />
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-2">
      <div class="flex flex-col gap-3">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class:list={[
              'text-sm font-medium py-2 transition-colors',
              isActive(link.href)
                ? 'text-spanish'
                : 'text-gray-600 hover:text-spanish',
            ]}
          >
            {link.label}
          </a>
        ))}
      </div>
    </div>
  </nav>
</header>

<script is:inline>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
